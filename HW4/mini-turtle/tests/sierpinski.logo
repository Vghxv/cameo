(* Sierpinski triangle (Gabriel DORIATH DÃ–HLER) *)

def sierpinski(n, d) {
  if n {
    sierpinski(n - 1, d / 2)
    penup
    forward d / 2
    pendown

    sierpinski(n - 1, d / 2)
    penup
    turnleft 120
    forward d / 2
    turnright 120
    pendown

    sierpinski(n - 1, d / 2)
    penup
    turnright 120
    forward d / 2
    turnleft 120
    pendown
  } else {
    repeat 3 {
      forward d
      turnleft 120
    }
  }
}

